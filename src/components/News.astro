---
interface Props {
  date: string;
  title: string;
}
const { date } = Astro.props;
const { title } = Astro.props;
---

<article
  class="border border-l-primary border-neutral-50 border-l-4 rounded-md bg-slate-50 mb-6 p-4"
>
  <h3 class="text-primary text-base">{date}</h3>
  <h2 class="text-secondary font-semibold text-xl my-2">
    {title}
  </h2>

  <slot />
</article>
